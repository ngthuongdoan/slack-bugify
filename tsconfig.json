{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      // "*": ["node_modules/*"],
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "files": true,
    "exclude": ["node_modules"],
    "skipLibCheck": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "spec",
    "node_modules",
    "node_modules/*",
    "node_modules/**/*",
    "node_modules/poe-node-api/*"
  ]
}
