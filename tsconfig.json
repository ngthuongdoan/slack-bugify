{
  "compilerOptions": {
    "module": "commonjs",
    "types": ["node"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2022",
    "lib": ["ES2022"],
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./",
    "paths": {
      // "*": ["node_modules/*"],
      "@/*": ["src/*"]
    }
  },
  "ts-node": {
    "files": true,
    "exclude": [
      "dist",
      "node_modules",
      "spec",
      "node_modules",
      "node_modules/*",
      "node_modules/**/*",
      "node_modules/poe-node-api/*"
    ],
    "skipLibCheck": true,
    "require": ["tsconfig-paths/register"]
  },
  "include": ["src/**/*"],
  "exclude": [
    "dist",
    "node_modules",
    "spec",
    "node_modules",
    "node_modules/*",
    "node_modules/**/*",
    "node_modules/poe-node-api/*"
  ]
}
